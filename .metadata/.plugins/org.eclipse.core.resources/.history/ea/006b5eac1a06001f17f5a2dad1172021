package ThreadPackage;

public class evenOddProblem implements Runnable{
	
	

	public static void main(String[] args) {
		
		Thread obj = new Thread(new evenOddProblem());
		
		obj.start();

	}
	static int  count = 1;
	
	@Override
	public void run() {
		
		while(count <= 10) {
		if(count % 2 == 0) {
			System.out.println(count);
			count++;
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		else
			System.out.println(count);
			count++;
		
	}
	}

}
